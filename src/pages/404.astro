---
import Layout from '../layouts/Layout.astro';
import { useTranslations, getHomePath } from '../i18n/utils';
import type { Locale } from '../i18n/utils';

const lang = (Astro.currentLocale || 'es') as Locale;
const t = useTranslations(lang);
const homePath = getHomePath(lang);
---

<Layout title={`404 - ${t('404.title')}`} hideTopBanner>
	<div class="bg-gray-900">
		<div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8 text-center">
			<p class="text-7xl font-bold text-indigo-900 sm:text-9xl">404</p>
			<h1 class="mt-4 text-4xl font-semibold tracking-tight text-white sm:text-5xl">
				{t('404.title')}
			</h1>
			<p class="mt-6 text-lg/8 text-gray-300">
				{t('404.description')}
			</p>
			<a
				href={homePath}
				class="mt-10 inline-flex items-center rounded-md bg-indigo-800 px-6 py-3 text-base font-medium text-white hover:bg-indigo-700 transition-colors"
			>
				{t('404.backHome')}
			</a>
		</div>
	</div>
</Layout>
