---
import { Image } from 'astro:assets';
import { getEntry } from 'astro:content';
import { getLocalePath } from '../i18n/utils';
import type { Locale } from '../i18n/utils';
import { useTranslations } from '../i18n/utils';

interface Props {
	name: string;
	slug: string;
	description: string;
	lang: Locale;
}

const { name, slug, description, lang } = Astro.props;
const assets = await getEntry('productAssets', slug);
const image = assets?.data.featuredImage1;
const t = useTranslations(lang);
const href = getLocalePath(lang, 'products', slug);
---

<a href={href} class="group relative flex flex-col overflow-hidden rounded-2xl bg-gray-800 ring-1 ring-white/10 transition hover:ring-white/20">
	<div class="aspect-[16/9] w-full overflow-hidden bg-gray-700">
		{image ? (
			<Image
				src={image}
				alt={name}
				widths={[400, 800]}
				sizes="(max-width: 768px) 100vw, 400px"
				class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
				loading="lazy"
			/>
		) : (
			<div class="flex h-full items-center justify-center text-gray-500">
				<svg class="size-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
					<path d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909M3.75 21h16.5A2.25 2.25 0 0 0 22.5 18.75V5.25A2.25 2.25 0 0 0 20.25 3H3.75A2.25 2.25 0 0 0 1.5 5.25v13.5A2.25 2.25 0 0 0 3.75 21Z" stroke-linecap="round" stroke-linejoin="round" />
				</svg>
			</div>
		)}
	</div>
	<div class="flex flex-1 flex-col p-6">
		<h3 class="text-lg font-semibold text-white group-hover:text-indigo-500 transition-colors">
			{name}
		</h3>
		<p class="mt-2 line-clamp-2 text-sm text-gray-400">
			{description}
		</p>
		<div class="mt-4 flex items-center text-sm font-medium text-indigo-500">
			{t('products.viewProduct')}
			<svg class="ml-1 size-4 transition-transform group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
				<path fill-rule="evenodd" d="M3 10a.75.75 0 0 1 .75-.75h10.638L10.23 5.29a.75.75 0 1 1 1.04-1.08l5.5 5.25a.75.75 0 0 1 0 1.08l-5.5 5.25a.75.75 0 1 1-1.04-1.08l4.158-3.96H3.75A.75.75 0 0 1 3 10Z" clip-rule="evenodd" />
			</svg>
		</div>
	</div>
</a>
