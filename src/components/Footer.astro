---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import { useTranslations, getLocalePath } from '../i18n/utils';
import logoClise from '../assets/images/home/logo-clise.png';
import type { Locale } from '../i18n/utils';
import { siteConfig } from '../config';

const lang = (Astro.currentLocale || 'es') as Locale;
const t = useTranslations(lang);
const privacyPath = getLocalePath(lang, 'privacy');
const termsPath = getLocalePath(lang, 'terms');
const productsPath = getLocalePath(lang, 'products');
const aboutPath = getLocalePath(lang, 'about');
const howToStartPath = getLocalePath(lang, 'how-to-start');
const contactPath = getLocalePath(lang, 'contact');

const emblems = await getCollection('products', ({ id, data }) => id.startsWith(`${lang}/`) && data.type === 'emblem');
---

<footer class="bg-[#0a0f1a]" aria-labelledby="footer-heading">
	<h2 id="footer-heading" class="sr-only">Footer</h2>
	<div class="mx-auto max-w-7xl px-6 py-16 sm:py-24 lg:px-8 lg:py-32">
		<div class="xl:grid xl:grid-cols-3 xl:gap-8">
			<div class="space-y-8">
				<Image src={logoClise} alt={t('footer.company')} class="h-16 w-auto" />
				<p class="text-sm/6 text-gray-300">Making the world a better place through constructing elegant hierarchies.</p>
				<div class="flex space-x-6">
					<a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-300">
						<span class="sr-only">Facebook</span>
						<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
							<path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
						</svg>
					</a>
					<a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-300">
						<span class="sr-only">Instagram</span>
						<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
							<path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
						</svg>
					</a>
					<a href={siteConfig.social.pinterest} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-300">
						<span class="sr-only">Pinterest</span>
						<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
							<path d="M12 0C5.373 0 0 5.372 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738a.36.36 0 01.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12 24c6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z" />
						</svg>
					</a>
					<a href={siteConfig.social.tiktok} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-300">
						<span class="sr-only">TikTok</span>
						<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
							<path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 3 3 0 0 1 .88.13V9.4a7 7 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a5 5 0 0 1-1-.1z" />
						</svg>
					</a>
					<a href={siteConfig.social.youtube} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-300">
						<span class="sr-only">YouTube</span>
						<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
							<path fill-rule="evenodd" d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 0 1-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 0 1-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 0 1 1.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z" clip-rule="evenodd" />
						</svg>
					</a>
				</div>
			</div>
			<div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
				<div class="md:grid md:grid-cols-2 md:gap-8">
					<div>
						<h3 class="text-sm/6 font-semibold text-white">{t('footer.section.company')}</h3>
						<ul role="list" class="mt-6 space-y-4">
							<li>
								<a href={productsPath} class="text-sm/6 text-gray-300 hover:text-white">{t('nav.products')}</a>
							</li>
							<li>
								<a href={howToStartPath} class="text-sm/6 text-gray-300 hover:text-white">{t('nav.howToStart')}</a>
							</li>
							<li>
								<a href={aboutPath} class="text-sm/6 text-gray-300 hover:text-white">{t('nav.about')}</a>
							</li>
							<li>
								<a href={contactPath} class="text-sm/6 text-gray-300 hover:text-white">{t('nav.contact')}</a>
							</li>
						</ul>
					</div>
					<div class="mt-10 md:mt-0">
						<h3 class="text-sm/6 font-semibold text-white">{t('footer.section.emblems')}</h3>
						<ul role="list" class="mt-6 space-y-4">
							{emblems.map((product) => {
								const slug = product.id.replace(`${lang}/`, '');
								return (
									<li>
										<a href={`${productsPath}/${slug}`} class="text-sm/6 text-gray-300 hover:text-white">{product.data.name}</a>
									</li>
								);
							})}
						</ul>
					</div>
				</div>
				<div class="md:grid md:grid-cols-2 md:gap-8">
					<div>
						<h3 class="text-sm/6 font-semibold text-white">{t('footer.section.transfers')}</h3>
						<p class="mt-6 text-sm/6 text-gray-400 italic">{t('footer.comingSoon')}</p>
					</div>
					<div class="mt-10 md:mt-0">
						<h3 class="text-sm/6 font-semibold text-white">Legal</h3>
						<ul role="list" class="mt-6 space-y-4">
							<li>
								<a href={privacyPath} class="text-sm/6 text-gray-300 hover:text-white">{t('privacy.title')}</a>
							</li>
							<li>
								<a href={termsPath} class="text-sm/6 text-gray-300 hover:text-white">{t('terms.title')}</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="mt-16 border-t border-white/10 pt-8 sm:mt-20 lg:mt-24">
			<p class="text-xs/5 text-gray-400">&copy; {new Date().getFullYear()} {t('footer.company')}. {t('footer.rights')}</p>
		</div>
	</div>
</footer>
